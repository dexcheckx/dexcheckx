{
  "manifest_version": 3,
  "name": "dexcheckx",
  "version": "1.0",
  "description": "Shows if tokens have paid for DexScreener advertising",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.dexscreener.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://axiom.trade/*",
        "https://dexscreener.com/*",
        "https://pump.fun/*",
        "https://jupiter.ag/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ]
}
